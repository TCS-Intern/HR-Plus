# TalentAI Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=TalentAI
DEBUG=true

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Google ADK / Gemini
GOOGLE_API_KEY=your-google-api-key
GOOGLE_GENAI_USE_VERTEXAI=false
GEMINI_MODEL=gemini-2.5-flash

# LinkedIn (optional - for OAuth)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Email (for sending offers and assessment invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Vapi AI (Phone Screening)
VAPI_API_KEY=your-vapi-api-key
VAPI_ASSISTANT_ID=your-assistant-id
VAPI_WEBHOOK_SECRET=your-webhook-secret
VAPI_PHONE_NUMBER=+1234567890

# Cal.com (Scheduling)
CALCOM_API_KEY=
CALCOM_WEBHOOK_SECRET=
CALCOM_EVENT_TYPE_ID=

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=TalentAI

# ===========================================
# CANDIDATE SOURCING PROVIDERS
# Choose based on your needs and budget
# ===========================================

# OPTION 1: Proxycurl (RECOMMENDED for LinkedIn)
# Best quality, most reliable, direct API access
# Cost: ~$0.01/profile lookup, ~$0.03/search result
# Get key at: https://nubela.co/proxycurl/
PROXYCURL_API_KEY=

# OPTION 2: Apify (Budget-friendly, less reliable)
# Uses Google Search + LinkedIn scrapers
# Cost: ~$5/1000 results (pay-as-you-go)
# Get token at: https://console.apify.com/account/integrations
APIFY_API_TOKEN=

# OPTION 3: People Data Labs (Large database, good for bulk)
# 1.5B+ professional profiles, good match rates
# Cost: ~$0.02-0.05/record
# Get key at: https://www.peopledatalabs.com/
PDL_API_KEY=

# OPTION 4: RocketReach (Best for contact info)
# Excellent email/phone finding
# Cost: ~$0.10/lookup
# Get key at: https://rocketreach.co/
ROCKETREACH_API_KEY=

# Apollo.io (B2B Sales Database)
# Good for company + contact info together
# Cost: Free tier available, paid plans from $49/mo
APOLLO_API_KEY=

# GitHub (Developer sourcing)
# Optional - for higher API rate limits when searching GitHub
GITHUB_TOKEN=

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
